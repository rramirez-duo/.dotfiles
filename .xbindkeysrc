################################
# Move mouse to left screen
################################
"move-mouse-left.sh; reset-mouse-top-left-of-screen.sh"
    m:0xd + c:113
    Control+Shift+Alt + Left

#################################
# Move mouse to right screen
#################################
"move-mouse-right.sh; reset-mouse-top-left-of-screen.sh"
    m:0xd + c:114
    Control+Shift+Alt + Right


#################################
# Toggle touchpad
#################################
"/usr/bin/trackpad-toggle.sh && sh ~/.xsetroot.sh"
    m:0x4 + c:9
    Control + Escape

#################################
# Screen Brightness -
#################################
# macbook pro
"light -U 10; sh ~/.xsetroot.sh"
    m:0x0 + c:232
    XF86MonBrightnessDown

# asus laptop
"light -U 10; sh ~/.xsetroot.sh"
    m:0x4 + c:71
    Control + F5

#################################
# Screen Brightness +
#################################
# macbook pro
"light -A 10; sh ~/.xsetroot.sh"
    m:0x0 + c:233
    XF86MonBrightnessUp
# asus laptop
"light -A 10; sh ~/.xsetroot.sh"
    m:0x4 + c:72
    Control + F6

#################################
# Volume Toggle Mute 
#################################
"sh ~/bin/volume-mute-toggle.sh; sh ~/.xsetroot.sh"
    m:0x4 + c:76
    Control + F10

"sh ~/bin/volume-mute-toggle.sh; sh ~/.xsetroot.sh"
    m:0x0 + c:121
    XF86AudioMute

#################################
# Volume Down
#################################
"sh ~/bin/volume-down.sh; sh ~/.xsetroot.sh"
    m:0x4 + c:95
    Control + F11

"sh ~/bin/volume-down.sh; sh ~/.xsetroot.sh"
    m:0x0 + c:122
    XF86AudioLowerVolume

# chromebook - TODO - does this work for chromebook?
# "amixer set Master 10%-; sh ~/.xsetroot.sh"
