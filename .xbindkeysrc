#################################
# Volume Up
#################################
"sh ~/bin/volume-up.sh; sh ~/.xsetroot.sh"
    m:0x4 + c:96
    Control + F12

"sh ~/bin/volume-up.sh; sh ~/.xsetroot.sh"
    m:0x0 + c:123
    XF86AudioRaseVolume

# chromebook - TODO - does this work for chromebook?
# "amixer set Master 10%+; sh ~/.xsetroot.sh"
#     m:0x0 + c:123
#     XF86AudioRaiseVolume

#################################
# reboot
#################################
"sudo reboot"
    m:0x4 + c:124
    Control + XF86PowerOff

#################################
# disable power button
#################################
""
    c:124
    PowerOff

#################################
# screenshot capture
#################################
"shutter"
    m:0x9 + c:14
    Shift+Alt + 5


#################################
# lock screen
##################################

# macbook pro
"lock"
    m:0xd + c:50
    Control+Shift+Alt + Shift_L


# asus laptop
"lock"
    m:0xd + c:46
    Control+Shift+Alt + l

#################################
# rescreen
##################################
"rescreen"
    m:0x8 + c:128
    Alt + XF86LaunchA
