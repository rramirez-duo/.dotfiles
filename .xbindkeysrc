#################################
# reboot
#################################
"sudo reboot"
    m:0x4 + c:124
    Control + XF86PowerOff

#################################
# disable power button
#################################
""
    c:124
    PowerOff

#################################
# screenshot capture
#################################
"shutter"
    m:0x9 + c:14
    Shift+Alt + 5


#################################
# lock screen
##################################
"lock"
    m:0x1d + c:46
    Control+Shift+Alt+Mod2 + l

#################################
# rescreen
##################################
"rescreen"
    m:0x0 + c:128
    XF86LaunchA
