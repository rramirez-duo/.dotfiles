
#################################
# Toggle touchpad
#################################
# old config -- before I started using termite for my primary terminal
# "/usr/bin/trackpad-toggle.sh; sh ~/.xsetroot.sh"
#     m:0x5 + c:65
#     Control+Shift + space

"/usr/bin/trackpad-toggle.sh && sh ~/.xsetroot.sh"
    m:0x4 + c:9
    Control + Escape

#################################
# Screen Brightness -
#################################
"xbacklight -dec 9; sh ~/.xsetroot.sh"
    m:0x5 + c:72
    Control+Shift + F6

# chromebook
"xbacklight down; sh ~/.xsetroot.sh"
    m:0x0 + c:232
    XF86MonBrightnessDown

#################################
# Screen Brightness +
#################################
"xbacklight -inc 9; sh ~/.xsetroot.sh"
    m:0x5 + c:73
    Control+Shift + F7

# chromebook
"xbacklight up; sh ~/.xsetroot.sh"
    m:0x0 + c:233
    XF86MonBrightnessUp

#################################
# Volume Toggle Mute 
#################################
"amixer set Master toggle; sh ~/.xsetroot.sh"
    m:0x5 + c:74
    Control+Shift + F8

# chromebook
"amixer set Master toggle; sh ~/.xsetroot.sh"
    m:0x0 + c:121
    XF86AudioMute

#################################
# Volume Down
#################################
"amixer set Master 5-; sh ~/.xsetroot.sh"
    m:0x5 + c:75
    Control+Shift + F9

# chromebook
"amixer set Master 10%-; sh ~/.xsetroot.sh"
    m:0x0 + c:122
    XF86AudioLowerVolume

#################################
# Volume Up
#################################
"amixer set Master 5+; sh ~/.xsetroot.sh"
    m:0x5 + c:76
    Control+Shift + F10

# chromebook
"amixer set Master 10%+; sh ~/.xsetroot.sh"
    m:0x0 + c:123
    XF86AudioRaiseVolume

#################################
# reboot
#################################
"sudo reboot"
    m:0x4 + c:124
    Control + XF86PowerOff

#################################
# disable power button
#################################
""
    c:124
    PowerOff

#################################
# screenshot capture
#################################
"shutter"
    m:0x9 + c:14
    Shift+Alt + 5
