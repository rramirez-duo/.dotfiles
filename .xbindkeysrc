
#################################
# Toggle touchpad
#################################
# old config -- before I started using termite for my primary terminal
# "/usr/bin/trackpad-toggle.sh; sh ~/.xsetroot.sh"
#     m:0x5 + c:65
#     Control+Shift + space

"/usr/bin/trackpad-toggle.sh && sh ~/.xsetroot.sh"
    m:0x4 + c:9
    Control + Escape

#################################
# Screen Brightness -
#################################
"xbacklight -10%; sh ~/.xsetroot.sh"
    m:0x0 + c:232
    XF86MonBrightnessDown

#################################
# Screen Brightness +
#################################
"xbacklight +10%; sh ~/.xsetroot.sh"
    m:0x0 + c:233
    XF86MonBrightnessUp

#################################
# Volume Toggle Mute 
#################################
"amixer -D pulse sset Master toggle; sh ~/.xsetroot.sh"
    m:0x0 + c:121
    XF86AudioMute

#################################
# Volume Down
#################################
"amixer -D pulse sset Master 5%-; sh ~/.xsetroot.sh"
    m:0x0 + c:122
    XF86AudioLowerVolume

# chromebook - TODO - does this work for chromebook?
# "amixer set Master 10%-; sh ~/.xsetroot.sh"
#     m:0x0 + c:122
#     XF86AudioLowerVolume

#################################
# Volume Up
#################################
"amixer -D pulse sset Master 5%+; sh ~/.xsetroot.sh"
    m:0x0 + c:123
    XF86AudioRaiseVolume


# chromebook - TODO - does this work for chromebook?
# "amixer set Master 10%+; sh ~/.xsetroot.sh"
#     m:0x0 + c:123
#     XF86AudioRaiseVolume

#################################
# reboot
#################################
"sudo reboot"
    m:0x4 + c:124
    Control + XF86PowerOff

#################################
# disable power button
#################################
""
    c:124
    PowerOff

#################################
# screenshot capture
#################################
"shutter"
    m:0x9 + c:14
    Shift+Alt + 5


#################################
# lock screen
##################################
"lock"
    m:0x1d + c:46
    Control+Shift+Alt+Mod2 + l
