#!/bin/bash

if [[ $(ip route | grep '135' | wc -l) > 1 ]]; then
    echo "ON THE CORP NET";
    sudo ln -sf /etc/apt/apt.conf.corp-net /etc/apt/apt.conf;
else
    echo "NOT ON CORP NET";
    if [[ -e /etc/apt/apt.conf ]]; then
        sudo unlink /etc/apt/apt.conf;
    fi
fi

sudo /usr/bin/apt $@

